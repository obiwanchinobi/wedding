<h1>New gift</h1>

<% form_for(@gift) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :category_id %><br />
    <%= f.select :category_id, @categories, :selected => 5 %>
  </p>
  <% if params[:is_admin].present? && params[:is_admin] == "true" %>
    <p>
      <%= f.label :is_admin %><br />
      <%= f.check_box :is_admin %>
    </p>
  <% end %>
  <% if params[:other_gift].present? %>
    <%= f.hidden_field :purchased_on %>
  <% end %>
  <% if params[:currently_own].present? %>
    <%= f.hidden_field :currently_own %>
  <% end %>
  <p>
    <%= f.submit 'Create' %>
    |
    <%= link_to 'Back', gifts_path %>
  </p>
<% end %>