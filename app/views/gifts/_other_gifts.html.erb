<hr />
<h3>Your Gift Ideas</h3>

<p><a href="gifts/new?other_gift=true" rel="facebox">Add new pressie</a></p>

<% @categories.each do |category| %>
  <% if category.gifts.other_gifts.present? %>
  <h5><%= category.description %></h5>
    <table>
    
      <% category.gifts.other_gifts.each do |gift| %>
        <tr>
          <td class="grid_10 alpha">
            <span class="claimed"><%=h gift.description %></span>

            <% if gift.purchased_on.present? %>
              <span class="claimed-timestamp ui-helper-hidden">
                <%=h gift.purchased_on.strftime("(Claimed on %a, %d %b at %I:%M%p)") %>
              </span>
            <% end %>
          </td>
          <td class="grid_2 alpha omega">
            <a href="gifts/<%= gift.id %>/edit" rel="facebox" class="claimed-link">Edit</a>
            |
            <%= link_to 'Remove', gift, :confirm => 'Are you sure you want delete this item from the list?', :method => :delete, :class => "claimed-link" %>
          </td>
        </tr>
      <% end %>
      
      </table>
  <% end %>
<% end %>